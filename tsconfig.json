{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "target": "ES2022",
    "lib": ["ES2023"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "typeRoots": ["typings", "node_modules/@types"],
    "declaration": true,
    "sourceMap": true
  },
  "include": [
    "./*.ts"
  ]
}
